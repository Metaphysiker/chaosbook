<%= simple_form_for(@book) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :maxnumchapt %>
    <%= f.input :min_length %>
    <%= f.input :max_length %>
    <%= f.label :tags, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list, class: "form-control" %><br>
    <%= f.button :submit %>
<% end %>